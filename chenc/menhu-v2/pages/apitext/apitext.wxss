/* pages/apitext/apitext.wxss */
.new{
   display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
}

/* 轮播图开始 */
.new-swiper{
  width: 100%;
  height: 300rpx;
  border-bottom: 10rpx solid #ddd;
}
.slide-image{
  width: 100%
}
/* 轮播图结束 */

/*导航栏开始  */
.new-nav {
  width: 100%;
  /* border-bottom: 5rpx solid #ddd; */
  display: flex;
  justify-content: center

}
.new-menu {
  float: left;
  width: 500rpx;
  height: 70rpx;
  /* border-right: 2rpx solid #ddd; */
  white-space: nowrap;
  /* background: #2222; */
}

.menu-nav {
  width: 100%;
  height: 90rpx;
  text-align: center;
}

.scroll-nav{
  display:flex;
  white-space: nowrap;
  font-size: 30rpx;
  height: 400rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: center
}

.scroll-nav navigator{
  font-weight: bold;
  margin: 0 10rpx;
}

/*导航栏结束  */


/* 内容呈现开始 */
.new-titel{
width: 100%;
height: 100%;

}
.new-titel-swiper1{
  width: 100%;
  height: 100%;
  background-color: red
}
.swiper-view2{
  width: 100%;
  height: 100%;
  background-color: greenyellow
}

.color-red{
  color: red
}

.item {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  margin: 10rpx 10rpx;
  border-bottom: 1px solid rgb(197, 199, 199);
  background: #2111;
}
 
.item .number-wrapper {
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
}
 
 
.number-wrapper .name {
  margin: 10rpx 40rpx 20rpx 10rpx;
  font-size: 35rpx;
  overflow: hidden;
}
 
.count {
  font-size: 34rpx;
}
/* 内容呈现结束 */