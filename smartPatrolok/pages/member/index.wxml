<view class="header">
  <image class="avtor" src="{{wxUserInfo.avatarUrl}}"></image>
  <view class="userinfo">
    <text class="truename">{{userInfo.trueName}}</text>
    <text class="mobile">{{userInfo.mobile}}</text>
  </view>
  <view class="department">
    <text>{{userInfo.jobNumber}}</text>
  </view>
</view>

<view class="stat">
  <view class="stat_column stat_column_left">
    <view class="stat_title">
      今日
    </view>
    <view class="stat_box">
      <view class="stat_box_column">
        <view class="stat_box_column_label">
            上报异常
        </view>
        <view class="stat_box_column_value">
            0
        </view>
      </view>
      <view class="stat_box_column">
        <view class="stat_box_column_label">
          上报异常
        </view>
        <view class="stat_box_column_value">
            0
        </view>
      </view>
    </view>
  </view>

  <view class="stat_column">
    <view class="stat_title">
      累计
    </view>
    <view class="stat_box">
      <view class="stat_box_column">
        <view class="stat_box_column_label">
          上报异常
        </view>
        <view class="stat_box_column_value">
          0
        </view>
      </view>
      <view class="stat_box_column">
        <view class="stat_box_column_label">
          上报异常
        </view>
        <view class="stat_box_column_value">
          0
        </view>
      </view>
    </view>
  </view>
</view>

<view class="function mt20">
  
  <view class="function_item function_item_border" bindtap="clearBeat">
    <image src="/resources/icon_normal.50.png@2x_89.png"></image>
    <text class="function_title">清空缓存</text>
    <text class="function_ext">0M</text>
    <image class="function_arrow" src="/resources/btn_normal.png@2x.png"></image>
  </view>
  <view class="function_item function_item_border" bindtap="updateBeat">
    <image src="/resources/icon_normal.50.png@2x_55.png"></image>
    <text class="function_title">检查更新</text>
    <text class="function_ext">v1.09</text>
    <image class="function_arrow" src="/resources/btn_normal.png@2x.png"></image>
  </view>
  <view class="function_item function_item_border" bindtap="bindLanya">
    <image src="/resources/icon_normal.50.png@2x_23.png"></image>
    <text class="function_title">意见反馈</text>
    <image class="function_arrow" src="/resources/btn_normal.png@2x.png"></image>
  </view>
  <view class="function_item function_item_border" bindtap="bt_women">
    <image src="/resources/icon_normal.50.png@2x.png"></image>
    <text class="function_title">关于我们</text>
    <image class="function_arrow" src="/resources/btn_normal.png@2x.png"></image>
  </view>
</view>

<view class="exit" bindtap="bindLogout">
  <view>注销</view>
</view>

