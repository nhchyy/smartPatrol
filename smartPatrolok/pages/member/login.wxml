<view class="bg">
  <image class="bg_image" src="/resources/img_default.jpg"></image>
  <image class="bg_logo" src="/resources/louyu.png"></image>
  <view class="form_box">
    <view class="form_item">
      <view class="item_thumb">
        <image src="/resources/icon.48.png"></image>
      </view>
      <view class="input_box">
        <input  bindinput="bindInputMobile" placeholder="请输入手机号码"></input>
      </view>
    </view>
    <view class="form_item">
      <view class="item_thumb">
        <image src="/resources/icon_mima.48.png@2x_90.png"></image>
      </view>
      <view class="input_box">
        <input bindinput="bindInputMobileCode" placeholder="请输入验证码"></input>
      </view>
      <view  bindtap="sendMessageForUserLogin" class="mobilecode">
        获取验证码
      </view>
    </view>
  </view>
  <view class="button_box">
    <view bindtap="bindLogin" class="button_login">登录</view>
    <view  bindtap="bindBand" class="button_band" bindtap="bindBand">绑定</view>
  </view>
</view>

