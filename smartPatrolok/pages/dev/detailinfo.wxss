/* pages/detailinfo/detailinfo.wxss */

page {
  background-color: white;
}

.hori {
  display: flex;
  align-items: flex-end;
  justify-content: left;
  padding-top: 15rpx;
}

.img {
  width: 30px;
  height: 30px;
}

.hd {
  padding: 20px;
  transition: opacity 0.3s;
}

.hd_show {
  opacity: 0.4;
}

.showbtn {
  align-items: center;
  margin-top: 15rpx;
  margin-left: 15px;
  margin-right: 15px;

}

.showmessage {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 15rpx;
  justify-content: space-around;
  box-sizing: border-box;
  margin-left: 15px;
  margin-right: 15px;
}

.backline {
  height: 1px;
  width: 100%;
  background-color: #ededed;
  margin-top: 10px;
  margin-bottom: 10px;
}

.pagetitle {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 30rpx;
  justify-content: space-between;
  box-sizing: border-box;
  text-align: left;
  font-size: 50rpx;
  font-weight: 400;
  padding-bottom: 20rpx;
  margin-left: 15px;
  margin-right: 15px;
}

.topbutton {
  width: 130rpx;
  height: 50rpx;
  padding: 0px 0px 0px 0px;

    font-size: 20rpx;
    text-align: center;
 vertical-align: middle;
 margin-right: 0px;
}
