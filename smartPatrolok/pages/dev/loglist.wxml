<!--pages/loglist/loglist.wxml-->
<view class="pagetitle">
  <view class="">维护日志</view>
  <view class="topbuttonview">
   
    <view style="color:red;font-size:30rpx;font-weight:bold;" bindtap="addlog">新增》</view> 
  </view>
</view>
<view class="showcenter">

</view>
<view class="backline"></view>
<view wx:for="{{list}}" wx:key="{{index}}">
  <view class="showlist">
    {{item.mtime}} <view style="text-align:start;color:#003377;">{{item.mtype}}</view>
    <image src="/resources/btn_xia.png" class="image" id="{{item.id}}" bindtap="detail"></image>
  </view>
  <view class="backline"></view>
  <view hidden="{{item.open ? '' : 'true'}}" class="detail-bg">
    <view>操作人：{{item.mname}}</view>
    <view>电话：{{item.mtel}}</view>
    <view style="width:100%;">描述：{{item.mdes}}</view>
  </view>
</view>