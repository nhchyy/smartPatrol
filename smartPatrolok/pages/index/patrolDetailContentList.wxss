.part1 {
  background-color: #ffffff;
}


.item {
  display: flex;
  align-items: center;
  font-size: 34rpx;
  height: 100rpx;
  position: relative;
  background-color: #ffffff;
}

.item:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #D9D9D9;
  color: #D9D9D9;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.item_label {
  word-break: break-all;
  color:#333333;
  margin-left: 20rpx;
}
.item_desc {
  flex-grow: 1000;
  color:#333333;
}

.item_arrow {
  height: 50rpx;
  width: 50rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}

.item_arrow image {
  height: 50rpx;
  width: 50rpx;
}

.part2 .item {
  padding-left: 20rpx;
  font-size: 24rpx;
}


.active {
  display: flex;
  position: fixed;
  bottom:0;
  width: 100%;
  background-color: #ffffff;
}

.active view{
  width: 100%;
  text-align: center;
  color:#ff5255;
  height: 100rpx;
  line-height: 100rpx;

}
.active .active_item_current {
  background-color: #F25E4C;
  color:#ffffff;
}