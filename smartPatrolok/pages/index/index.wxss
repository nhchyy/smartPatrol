.tag {
  display: flex;
  background-color: #FFFFFF;
  position: relative;
}

.tag_item {
  flex:1;
}

.tag_item view {
  height: 84rpx;
  line-height: 86rpx;
  text-align: center;
  width: 120rpx;
  margin-left: auto;
  margin-right: auto;
  font-size: 32rpx;
  color:#333333;
}

.tag_item .tag_item_current {
  border-bottom: 8rpx solid #ff5255;
  color:#ff5255;
}

.tag:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #dfdfdd;
  color: #D9D9D9;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.article_tag .tag_item {
  width: 50%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  color:#757575;
}
.article_tag .article_tag_current {
  border-bottom: 9rpx solid #ff5255;
  color:#ff5255;
}


