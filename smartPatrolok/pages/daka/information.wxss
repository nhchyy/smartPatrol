.top{
  width:710rpx;
  height:80rpx;
  display:flex;
  background:#fff;
  align-items: center;
  border: 1rpx solid rgb(173, 173, 173);
  border-radius: 25rpx;
  margin: 10rpx 20rpx;
}

.top image{
  height: 70rpx;
  width: 70rpx;
  padding:0 20rpx;
}

.input{
  width:80%;
  height:100%;
  font-size:32rpx;
}

.item {
  display: flex;
  align-items: center;
  height: 185rpx;
  padding: 3rpx 40rpx 3rpx 40rpx;
  margin-bottom: 10rpx;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid rgb(173, 173, 173);
}

.item image{
  height: 110rpx;
  width: 110rpx;
  padding-right: 40rpx;
}

.text{
  width: 480rpx;
  height: 180rpx;
  padding-top: 20rpx;
  letter-spacing: 2rpx;
}

.text .t1{
  width: 100%;
  height: 66rpx;
  font-size: 35rpx;
}

.text .t2 {
  width: 100%;
  height: 50rpx;
  font-size: 30rpx;
  color:#333333;
}
