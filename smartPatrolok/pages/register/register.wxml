<!--pages/register/register.wxml-->
<view class="bg">
  <!-- <image class="bg_image" src="/pages/register/images/5.png"></image> -->
  <image class="bg_logo" src="/pages/register/images/5.png"></image>
  <form bindsubmit="formSubmit" bindreset="formReset">
  <view class="form_box">
   <view class="form_item">
        <view>员工姓名：</view>
      <view class="input_box">
        <input  bindinput="bindInputName" bindblur ="nameInput" name="adminName" placeholder="请输入员工名字"></input>
      </view>
    </view>
    <view class="form_item">
        <view>登录账号：</view>
      <view class="input_box">
        <input  bindinput="bindInputMobile" name="mobileName" bindblur ="mobileInput" placeholder="请输入正确手机号码"></input>
      </view>
    </view>
    <view class="form_item">
        <view>设置密码：</view>
      <view class="input_box">
        <input bindinput="bindInputMobilePwd"  name="pwdName" bindblur ="mobilePwdInput" placeholder="请设置六位以上密码"></input>
      </view>    
    </view>

      <view class="form_item">
        <view>确认密码：</view>
      <view class="input_box">
        <input bindinput="bindInputMobilePwdOk"  name="pwdOkName" bindblur ="mobilePwdInputOK" placeholder="请再次确认密码"></input>
      </view>    
    </view>
  </view>
  <view class="button_box">
    <button class="register" bindtap='bindRegister' formType="submit" style='width:500rpx'>注册</button>
  </view>
  
  </form>

</view>