.weui-label{
  display: block;
  width: 210rpx;
  word-wrap: break-word;
  word-break: break-all;
}

.weui-input {
  width: 100%;
  border: 0;
  outline: 0;
  -webkit-appearance: none;
  background-color: transparent;
  font-size: inherit;
  color: inherit;
  height: 36rpx;
  line-height: 36rpx;
}
.weui-textarea {
  display: block;
  border: 0;
  resize: none;
  width: 100%;
  color: inherit;
  font-size: 32rpx;
  line-height: inherit;
  outline: 0;
}



.weui-toptips {
  display:none;
  position: fixed;
  transform: translateZ(0);
  top: 0;
  left: 0;
  right: 0;
  padding:5px;
  font-size:14px;
  text-align: center;
  color: #FFF;
  z-index: 5000;
}
