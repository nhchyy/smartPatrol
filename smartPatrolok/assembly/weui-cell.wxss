.weui-cells {
  background-color: #FFFFFF;
  line-height: 1.41176471;
  overflow: hidden;
  position: relative;
}

.weui-cells__title {
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  color: #999999;
}

.weui-cells__tips {
  margin-top: 12rpx;
  color: #999999;
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-size: 28rpx;
}

.weui-cell {
  padding: 30rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.weui-cell_primary{
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
  align-items: flex-start;
}

.weui-cell__bd{
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.weui-cell__ft {
  text-align: right;
  color: #999999;
}

.weui-cell_vcode {
  padding-top: 0;
  padding-right: 0;
  padding-bottom: 0;
}
.weui-cell:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1rpx;
  border-top: 1rpx solid #D9D9D9;
  color: #D9D9D9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  left: 30rpx;
}


.weui-cells:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1rpx;
  border-bottom: 1rpx solid #D9D9D9;
  color: #D9D9D9;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}