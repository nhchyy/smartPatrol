/**app.wxss**/
.weui-panel {
  position: relative;
  background-color: #ffffff;
}

.weui-panel:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1rpx;
  border-top: 1rpx solid #E5E5E5;
  color: #E5E5E5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.weui-panel:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1rpx;
  border-bottom: 1rpx solid #E5E5E5;
  color: #E5E5E5;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}



.weui-panel__hd {
  padding: 28rpx 30rpx 20rpx;
  color: #666666;
  font-size: 26rpx;
  position: relative;
}



.weui-media-box {
  padding: 30rpx;
  position: relative;
}



.weui-media-box__title {
  font-weight: 400;
  font-size: 34rpx;
  word-wrap: break-word;
  word-break: break-all;
  margin-bottom: 16rpx;
}
.weui-media-box__desc {
  color: #999999;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.weui-media-box__info {
  margin-top: 30rpx;
  padding-bottom: 10rpx;
  font-size: 26rpx;
  color: #666666;
  line-height: 32rpx;
  list-style: none;
  overflow: hidden;
}
.weui-media-box__info__meta {
  float: left;
  padding-right: 32rpx;
}
.weui-media-box__info__meta_extra {
  padding-left: 32rpx;
  border-left: 1rpx solid #CECECE;
}
.weui-media-box_text {

}
.weui-media-box_appmsg {
  display: flex;
  align-items: center;
}
.weui-media-box_small-appmsg {
  padding: 0;
}
.weui-media-box_appmsg .weui-media-box__hd {
  margin-right: 20rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
}

.weui-media-box:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1rpx;
  border-top: 1rpx solid #E5E5E5;
  color: #E5E5E5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  left: 30rpx;
}